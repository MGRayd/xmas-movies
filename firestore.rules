rules_version = '2';

service cloud.firestore {
  // Helper function to check if the user is an admin
  function isAdmin() {
    return request.auth != null && 
      (request.auth.token.admin == true || 
       exists(/databases/{database}/documents/admins/$(request.auth.uid)));
  }
  match /databases/{database}/documents {
    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // User movies subcollection - users can only access their own data
      match /movies/{movieId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Movies collection - anyone can read, only authenticated users can create
    match /movies/{movieId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        ((request.auth.uid != null && exists(/databases/{database}/documents/userMovies/$(request.auth.uid + '_' + movieId))) || isAdmin());
      allow delete: if request.auth != null && 
        ((request.auth.uid != null && exists(/databases/{database}/documents/userMovies/$(request.auth.uid + '_' + movieId))) || isAdmin());
    }
    
    // UserMovies collection - users can only access their own data
    match /userMovies/{userMovieId} {
      allow read: if request.auth != null && 
        (userMovieId.matches(request.auth.uid + "_.*") || isAdmin());
      allow write: if request.auth != null && 
        (userMovieId.matches(request.auth.uid + "_.*") || isAdmin());
    }
    
    // MovieLists collection - users can only access their own lists unless marked as public
    match /movieLists/{listId} {
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || resource.data.isPublic == true || isAdmin());
      allow create: if request.auth != null && 
        (request.resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if request.auth != null && 
        (resource.data.userId == request.auth.uid || isAdmin());
    }
	
	// Global stats document (for aggregate counters like watchedTotal)
    match /stats/global {
      // Allow anyone to read the total (or require auth if you prefer)
      allow read: if true;

      // Allow create by authenticated users (ensures doc exists)
      allow create: if request.auth != null
        && request.resource.data.keys().hasOnly(['watchedTotal','updatedAt'])
        && request.resource.data.watchedTotal is int
        && request.resource.data.watchedTotal >= 0;

      // Allow atomic +1 / -1 updates by authenticated users
      allow update: if request.auth != null
        && request.resource.data.keys().hasOnly(['watchedTotal','updatedAt'])
        && request.resource.data.watchedTotal is int
        && resource.data.watchedTotal is int
        && (
          request.resource.data.watchedTotal ==
            resource.data.watchedTotal + 1
          ||
          request.resource.data.watchedTotal ==
            resource.data.watchedTotal - 1
        );

      // Prevent deletes
      allow delete: if false;
    }
    
    // Admin collection - only admins can access
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}