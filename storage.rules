rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Only authenticated users can read and write to storage
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Movie posters can be read by anyone, but only written by authenticated users
    match /posters/{movieId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // User uploads can only be accessed by the user who uploaded them
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
